<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sharelocation.fragments.SummaryFragment">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="219dp"
        android:text="Persone con cui condividere la posizione:"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/favcontactlist"
        app:layout_constraintStart_toStartOf="@+id/favcontactlist"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orarioArrivoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/destinationTextView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:text="Orario d'arrivo previsto:"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/orarioArrivoTextView"
        app:layout_constraintEnd_toStartOf="@+id/orarioArrivoTextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="17dp"
        android:text="Riepilogo viaggio:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/destinationTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="49dp"
        android:text="Destinazione:"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/destinationTextView"
        app:layout_constraintEnd_toStartOf="@+id/destinationTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/destinationTextView"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="46dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/confermaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:text="Avvia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favcontactlist"
        android:layout_width="295dp"
        android:layout_height="194dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="102dp"
        app:layout_constraintBottom_toBottomOf="@+id/confermaButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>